<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.choiboi.apiexamples"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black" >
        
        <activity
            android:name="com.choiboi.apiexamples.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.choiboi.apiexamples.toast.ToastMainActivity"
            android:configChanges="keyboardHidden"
            android:screenOrientation="portrait"
            android:label="@string/toast_title" >
        </activity>
        <activity
            android:name="com.choiboi.apiexamples.camera.CameraMainActivity"
            android:configChanges="keyboardHidden"
            android:screenOrientation="portrait"
            android:label="@string/camera_title" >
        </activity>
        <activity
            android:name="com.choiboi.apiexamples.gallery.GalleryMainActivity"
            android:configChanges="keyboardHidden"
            android:screenOrientation="portrait"
            android:label="@string/camera_title" >
        </activity>
        <activity
            android:name="com.choiboi.apiexamples.button.ButtonMainActivity"
            android:configChanges="keyboardHidden"
            android:screenOrientation="portrait"
            android:label="@string/button_listener_title" >
        </activity>
    </application>
</manifest>